{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Bluecompute Toolchain Deployment to Bluemix",
    "description": "bluecompute toolchain",
    "longDescription": "Information entered here will be used at deployment time.",
    "type": "object",
    "properties": {
        "repo-branch": {
            "description": "Git repo branch",
            "type": "string"
        },
        "deploy-org": {
            "description": "Deploy to this Bluemix Organization",
            "type": "string"
        },
        "deploy-space": {
            "description": "Deploy to this space",
            "type": "string"
        },
        "deploy-region": {
            "description": "Deploy to this region",
            "type": "string"
        },
        "zuul-fqdn": {
            "description": "Zuul Proxy FQDN",
            "type": "string"
        },
        "auth-fqdn": {
            "description": "Authentication Microservice FQDN",
            "type": "string"
        },
        "apic-url": {
            "description": "APIC URL",
            "type": "string"
        },
        "apic-user": {
            "description": "APIC username",
            "type": "string"
        },
        "apic-pass": {
            "description": "APIC password",
            "type": "password"
        },
        "shared-secret": {
            "description": "JWT shared secret. Use https://mkjwk.org/ to generate a secret. Switch to Shared Secret and use Key Size:2048, Key Use:signing, Algorithm:HS256",
            "type": "string"
        }
    },
    "required": [
        "repo-branch",
        "deploy-region",
        "deploy-org",
        "deploy-space",
        "zuul-fqdn",
        "auth-fqdn",
        "apic-user",
        "apic-pass",
        "shared-secret"
        ],
    "form": [
        {
            "type": "validator",
            "url": "/devops/setup/bm-helper/helper.html"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Git repo branch",
            "key": "repo-branch"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "APIC Username",
            "key": "apic-user"
        },
        {
            "type": "password",
            "readonly": false,
            "title": "APIC Password",
            "key": "apic-pass"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Zuul FQDN",
            "key": "zuul-fqdn"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Auth Microservice FQDN",
            "key": "auth-fqdn"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "JWT Shared Secret",
            "key": "shared-secret"
        },
        {
            "type": "table",
            "columnCount": 3,
            "widths": ["30%", "35%", "35%"],
            "items": [
                {
                    "type": "label",
                    "title": "Region"
                },
                {
                    "type": "label",
                    "title": "Organization"
                },
                {
                    "type": "label",
                    "title": "Space"
                },
                {
                    "type": "label",
                    "key": "deploy-region"
                },
                {
                    "type": "select",
                    "key": "deploy-org"
                },
                {
                    "type": "select",
                    "key": "deploy-space",
                    "readonly": false
                }
            ]
        }
    ]
}
